# Example terraform.tfvars for production environment
# Copy this file to terraform.tfvars and fill in your values

# Required variables
project_id = "my-gcp-project-prod"
app_image  = "gcr.io/my-project/hrafner:v1.0.0"

# AI API keys (keep these secure!)
ai_api_keys = {
  OPENAI_API_KEY    = "sk-..."
  ANTHROPIC_API_KEY = "sk-ant-..."
}

# MCP servers for production
mcp_servers = {
  filesystem = {
    url         = "https://mcp-fs.example.com"
    api_key     = "prod-fs-key"
    description = "Production filesystem MCP server"
  }
  git = {
    url         = "https://mcp-git.example.com"
    api_key     = "prod-git-key"
    description = "Production git MCP server"
  }
}

# React frontend configuration
enable_react_frontend = true
react_image          = "gcr.io/my-project/hrafner-ui:v1.0.0"
enable_htmx_frontend = false

# Cloudflare DNS configuration
enable_cloudflare_dns = true
cloudflare_api_token  = "your-cloudflare-token"
cloudflare_zone_id    = "your-zone-id"
base_domain          = "example.com"
api_subdomain        = "api"
ui_subdomain         = "app"

# Security - restrict access to specific IP ranges for production
allowed_ingress_cidrs = [
  "203.0.113.0/24",  # Office network
  "198.51.100.0/24"  # VPN network
]